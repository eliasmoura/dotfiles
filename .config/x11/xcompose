 XDG_CONFIG_HOME/x11/xcompose

include "%S/en_US.UTF-8/Compose"
include "%S/pt_BR.URF-8/Compose"

# Prefix 'm': Mathematical symbols
<Multi_key> <m> <d> :                   "Δ"
<Multi_key> <m> <e> :                   "ϵ"
<Multi_key> <m> <E> :                   "∃"
<Multi_key> <m> <F> :                   "∀"
<Multi_key> <m> <l> :                   "λ"
<Multi_key> <m> <N> :                   "ℕ"
<Multi_key> <m> <p> :                   "π"
<Multi_key> <m> <i> :                   "∞"
<Multi_key> <m> <t> :                   "𝛩"
<Multi_key> <m> <a> :                   "𝑎"
<Multi_key> <m> <b> :                   "𝑏"
<Multi_key> <m> <c> :                   "𝑐"
<Multi_key> <m> <f> :                   "𝑓"
<Multi_key> <m> <g> :                   "𝑔"
<Multi_key> <m> <n> :                   "𝑛"
<Multi_key> <m> <q> :                   "𝑞"
<Multi_key> <m> <s> :                   "𝑠"
<Multi_key> <m> <x> :                   "𝑥"
<Multi_key> <m> <y> :                   "𝑦"
<Multi_key> <m> <less> :                "↜"
<Multi_key> <m> <minus> :               "↭"
<Multi_key> <m> <greater> :             "↝"
<Multi_key> <m> <bar> <underscore> :    "⊥"
<Multi_key> <plus> <minus> :            "±"
<Multi_key> <minus> <plus> :            "±"
<Multi_key> <equal> <slash> :           "≠"
<Multi_key> <slash> <equal> :           "≠"
<Multi_key> <equal> <space> :           "≈"
<Multi_key> <space> <equal> :           "≈"
<Multi_key> <8> :                       "∞"
<Multi_key> <x> <x> :                   "×"
<Multi_key> <comma> <minus> :           "¬"
<Multi_key> <minus> <comma> :           "¬"
<Multi_key> <p> <i> :                   "π"

#Turkish letters
<Multi_key> <t> <L> :                   "I"
<Multi_key> <t> <l> :                   "ı"
<Multi_key> <t> <I> :                   "İ"
<Multi_key> <t> <i> :                   "i"

