# Quotes
<Multi_key> <bracketleft> <apostrophe> : "｢"
<Multi_key> <bracketright> <apostrophe> : "｣"

# Easier grammar
<Multi_key> <semicolon> <apostrophe> :  "’"
<Multi_key> <colon> <apostrophe> :      "‘"

# Misc
<Multi_key> <colon> <bar> <bar> :       "ಠ_ಠ"
<Multi_key> <less> <3> :                "❤"
<Multi_key> <l> <o> <o> <k> :           "ಠ_ಠ"
<Multi_key> <s> <h> <r> <u> <g> :   "¯\_(ツ)_/¯"

# silly signs
<Multi_key> <c> <c> <c> <p> :           "☭"

# copyright
<Multi_key> <c> <o> :                   "©"
<Multi_key> <r> <o> :                   "®"
<Multi_key> <t> <m> :                   "™"
<Multi_key> <bar> <asciicircum> :       "↑"
<Multi_key> <bar> <v> :                 "↓"

# IRC shortcuts
<Multi_key> <v> <i> :               "$EDITOR"

# Fun with Paleotypography
<Multi_key> <T> <H> :                   "Þ" # 'Th'e
<Multi_key> <t> <h> :                   "þ"

<Multi_key> <D> <H> :                   "Ð"
<Multi_key> <d> <h> :                   "ð"

<Multi_key> <W> <W> :                   "Ƿ" # 'W'hen
<Multi_key> <w> <w> :                   "ƿ"

<Multi_key> <s> <s> :                   "ſ" # 'S'ee

<Multi_key> <Y> <Y> :                   "Ȝ" # 'Plo'ugh'
<Multi_key> <y> <y> :                   "ȝ"

<Multi_key> <N> <G> :                   "Ŋ" # Si'ng'
<Multi_key> <n> <g> :                   "ŋ"

<Multi_key> <x> <a> :       "http://hyperboleandahalf.blogspot.com.br/2010/04/alot-is-better-than-you-at-everything.html"
<Multi_key> <t> <r> <a> <i> <n> : "🚂 🚊 🚉 🚞 🚆 🚄 🚅 🚈 🚇 🚝 🚋 🚃 🚟"
