#!/bin/sh --

screenshot(){
  if maim -s "$1"; then
    notify-send -a maim -c general "Screenshot taken." "$1"
  else
    notify-send -u critical -a maim -c general "Screenshot failed." "$1"
  fi
}

path=~/pictures/screenshots/$(date +%F_%T).png
case $1 in
    *)
      screenshot "$path"
    ;;
esac
