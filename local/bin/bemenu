#!/usr/bin/env sh
run() {
  while pgrep bemenu; do
    sleep 1
  done
  # shellcheck disable=2086
  set -x
  $prog $opts "$@"
  set +x
}
#shellcheck source=/home/kotto/local/cfg/bemenu/config
#shellcheck disable=SC1091
. "${XDG_CONFIG_HOME:-$HOME/local/cfg}"/bemenu/config

if [ "$1" = "run" ]; then
  prog=/usr/bin/bemenu-run
  pt="--prompt Run: "
  shift 1
else
  prog=/usr/bin/bemenu
fi

opts="$case $c $nl $pt"
run "$@"
