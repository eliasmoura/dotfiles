super + alt + Escape
    pkill panel; bspc quit

super + shift + q
    bspc node -c

super + shift + b
    bspc node @/ --balance

super + {s,f,d}
    bspc node -t \\~{floating,fullscreen,tiled}

super + {grave,Tab}
    bspc {node,desktop} -f last

# quote in my case (br-abnt2)
super + apostrophe
    bspc node @ -s last #swap selected window with the last selected

super + {o,i}
    bspc control --record-history off; \
    bspc node {older,newer} -f; \
    bspc control --record-history on

super + y
    bspc node -w last.manual

super + m
    bspc node -s biggest

super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {left,down,above,right}

super + {_,shift + }c
    bspc node -f {next,prev}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
    bspc {node -p cancel,desktop -c}

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
    bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
    bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}
    #need fix
super + ctrl + {1-9}
    bspc node -r 0.{1-9}

super + t
    bspc desktop -l next

super + bracket{left,right}
    bspc desktop -f {prev,next}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + ~button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

#
# wm independent hotkeys
#

#Volume keyboard hotkeys
shift + XF86Audio{LowerVolume,RaiseVolume,Mute}
    ponymix {decrease 5,increase 5,toggle}

#Multimedia keyboard hotkeys
shift + XF86Audio{Prev,Next,Play}
    mpc {prev,next,toggle}

{_, control +, shift +} Print
    $HOME/local/bin/printscreen.sh {fullscreen,selection,record}

super + Return
    termite

super + space; {o,p,r}
  {bemenu-run -l 15 -p run -P ">>", mpv-run, read_doc}

super + space; space
  /usr/bin/i3lock --dpms --ignore-empty-password

super + Escape
    pkill -USR1 -x sxhkd  \
    pkill panel && $XDG_CONFIG_HOME/bspwm/panel/panelrc & \
    $XDG_CONFIG_HOME/bspwm/bspwmrc

#reload bspwm config
super + alt + {_,shift + }Escape
    {bspc query -T > "$BSPWM_TREE"; \
        bspc query -H > "$BSPWM_HISTORY"; \
            pkill panel \
                bspc quit,\
    bspc quit 1}

