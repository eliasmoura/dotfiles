#XDG_CONFIG_HOME/x11/xcompose

include "%S/en_US.UTF-8/Compose"
include "%S/pt_BR.URF-8/Compose"

# Prefix 'm': Mathematical symbols
<Multi_key> <m> <d> :                   "Δ"
<Multi_key> <m> <e> :                   "ϵ"
<Multi_key> <m> <E> :                   "∃"
<Multi_key> <m> <F> :                   "∀"
<Multi_key> <m> <l> :                   "λ"
<Multi_key> <m> <N> :                   "ℕ"
<Multi_key> <m> <p> :                   "π"
<Multi_key> <m> <i> :                   "∞"
<Multi_key> <m> <t> :                   "𝛩"
<Multi_key> <m> <a> :                   "𝑎"
<Multi_key> <m> <b> :                   "𝑏"
<Multi_key> <m> <c> :                   "𝑐"
<Multi_key> <m> <f> :                   "𝑓"
