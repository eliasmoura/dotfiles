# Quotes
<Multi_key> <bracketleft> <apostrophe> : "｢"
<Multi_key> <bracketright> <apostrophe> : "｣"

# Easier grammar
<Multi_key> <semicolon> <apostrophe> :  "’"
<Multi_key> <colon> <apostrophe> :      "‘"

# Misc

# silly signs
<Multi_key> <c> <c> <c> <p> :           "☭"
<Multi_key> <colon> <bar> <bar> :       "ಠ_ಠ"
<Multi_key> <less> <3> :                "❤"
<Multi_key> <l> <o> <o> <k> :           "ಠ_ಠ"
<Multi_key> <s> <h> <r> <u> <g> :   "¯\\\_(ツ)_/¯"
<Multi_key> <period> <bar> <period> 	:	"╭∩╮（︶︿︶）╭∩╮"

# copyright
<Multi_key> <c> <o> :                   "©"
<Multi_key> <r> <o> :                   "®"
<Multi_key> <t> <m> :                   "™"
<Multi_key> <bar> <asciicircum> :       "↑"
<Multi_key> <bar> <v> :                 "↓"

# IRC shortcuts
<Multi_key> <v> <i> :               "$EDITOR"

